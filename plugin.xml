<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
           id="com-method76-bottombarbridge"
      version="0.5.2">
    <name>BottombarBridge</name>
    <description>Bottombar Bridge for Cordova</description>
    <license>Apache2.0</license>
    <keywords>cordova,BottombarBridge</keywords>

    <js-module src="www/bottombar_bridge.js" name="BottombarBridge">
        <clobbers target="window.bottombarBridge" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="BottombarBridge">
                <param name="android-package" value="com.method76.bottombar.bridge.BottombarBridge"/>
            </feature>
        </config-file>
        <source-file src="src/android/BottombarBridge.java" target-dir="src/com/method76/bottombar/bridge" />
        <source-file src="src/android/BottombarFunction.java" target-dir="src/com/method76/bottombar/bridge" />
    </platform>
</plugin>
